{
  "realm": "photoz",
  "auth-server-url": "http://localhost:8180/auth",
  "ssl-required": "external",
  "resource": "photoz-restful-api",
  "bearer-only" : true,
  "credentials": {
    "secret": "secret"
  },
  "policy-enforcer": {
    "enforcement-mode": "PERMISSIVE",
    "paths": [
      {
        "name" : "Album Resource",
        "path" : "/album/{id}",
        "methods" : [
          {
            "method": "DELETE",
            "scopes" : ["album:delete"]
          },
          {
            "method": "GET",
            "scopes" : ["album:view"]
          }
        ]
      },
      {
        "path" : "/profile"
      },
      {
        "name" : "Admin Resources",
        "path" : "/admin/*"
      }
    ]
  }
}