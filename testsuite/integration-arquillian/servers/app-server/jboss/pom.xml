                                    <goal>copy-resources</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>${app.server.jboss.home}/standalone-cluster</outputDirectory>
                                    <resources>
                                        <resource>
                                            <directory>${app.server.jboss.home}/standalone</directory>
                                        </resource>
                                    </resources>
                                </configuration>
                            </execution>
                            <execution>
