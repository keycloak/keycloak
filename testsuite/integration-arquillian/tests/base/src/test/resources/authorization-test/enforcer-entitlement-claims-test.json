{
  "realm": "authz-test",
  "auth-server-url": "http://localhost:8180/auth",
  "resource": "resource-server-test",
  "credentials": {
    "secret": "secret"
  },
  "paths": [
    {
      "path": "/api/bank/account/{id}/withdrawal",
      "methods": [
        {
          "method": "POST",
          "scopes": [
            "withdrawal"
          ]
        }
      ],
      "claim-information-point": {
        "claims": {
          "withdrawal.amount": "{request.parameter['withdrawal.amount']}"
        }
      }
    }
  ]
}
