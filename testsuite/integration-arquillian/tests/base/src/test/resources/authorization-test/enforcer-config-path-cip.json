{
  "realm": "test-realm-authz",
  "auth-server-url": "http://localhost:8180/auth",
  "resource": "test-app-authz",
  "credentials": {
    "secret": "secret"
  },
  "paths": [
    {
      "path": "/v1/product/*",
      "methods": [
        {
          "method": "POST",
          "scopes": [
            "create"
          ]
        }
      ],
      "claim-information-point": {
        "claims": {
          "claim-a": "{request.parameter['a']}",
          "claim-b": "{request.header['b']}",
          "claim-c": "{request.cookie['c']}"
        }
      }
    }
  ]
}
