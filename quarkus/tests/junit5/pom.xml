    <description>Keycloak Quarkus Server JUnit 5 Internal Test Framework</description>

    <artifactId>keycloak-junit5</artifactId>
    <packaging>jar</packaging>

    <properties>
        <kc.quarkus.tests.dist>raw</kc.quarkus.tests.dist>
