{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "noEmit": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom", "dom.iterable" ],
    "noImplicitAny": true,
    "strictNullChecks": true,
    "jsx": "react",
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true
  },
  "include": [
    "./app/**/*.ts?"
  ]
}
