<ul class="pf-c-dropdown__menu{{#if dropdown-menu--modifier}} {{dropdown-menu--modifier}}{{/if}}"
  aria-labelledby="{{id}}-button"
  {{#unless dropdown--IsExpanded}}hidden{{/unless}}
  {{#if dropdown-menu--attribute}}
	  {{{dropdown-menu--attribute}}}
  {{/if}}>
  <li>
    {{#if dropdown--HasItemIcons}}
      {{#> dropdown-menu-item dropdown-menu-item--type="a" dropdown-menu-item--modifier="pf-m-icon" dropdown-menu-item--attribute='href="#"'}}
        {{#> dropdown-menu-item-icon}}
          <img src="/assets/images/pf-logo-small.svg" alt="PatternFly logo">
        {{/dropdown-menu-item-icon}}
        Link
      {{/dropdown-menu-item}}
    {{else}}
      {{#> dropdown-menu-item dropdown-menu-item--type="a" dropdown-menu-item--attribute='href="#"'}}
        {{# if dropdown--MenuLinkText}}
          {{dropdown--MenuLinkText}}
        {{else}}
          Link
        {{/if}}
      {{/dropdown-menu-item}}
    {{/if}}
  </li>
  <li>
    {{#if dropdown--HasItemIcons}}
      {{#> dropdown-menu-item dropdown-menu-item--modifier="pf-m-icon"}}
        {{#> dropdown-menu-item-icon}}
          <i class="fas fa-cog" aria-hidden="true"></i>
        {{/dropdown-menu-item-icon}}
        Action
      {{/dropdown-menu-item}}
    {{else}}
      {{#> dropdown-menu-item}}
        {{# if dropdown--MenuActionText}}
          {{dropdown--MenuActionText}}
        {{else}}
          Action
        {{/if}}
      {{/dropdown-menu-item}}
    {{/if}}
  </li>
  <li>
    {{#> dropdown-menu-item dropdown-menu-item--type="a" dropdown-menu-item--modifier="pf-m-disabled" dropdown-menu-item--attribute='href="#" aria-disabled="true" tabindex="-1"'}}
      Disabled link
    {{/dropdown-menu-item}}
  </li>
  <li>
    {{#> dropdown-menu-item dropdown-menu-item--attribute='disabled'}}
      Disabled action
    {{/dropdown-menu-item}}
  </li>
  {{> divider divider--type="li"}}
  <li>
    {{#> dropdown-menu-item dropdown-menu-item--type="a" dropdown-menu-item--attribute='href="#"'}}
      Separated link
    {{/dropdown-menu-item}}
  </li>
</ul>
