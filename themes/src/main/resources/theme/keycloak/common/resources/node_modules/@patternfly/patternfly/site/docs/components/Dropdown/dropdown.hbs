<div class="pf-c-dropdown{{#if dropdown--IsExpanded}} pf-m-expanded{{/if}}{{#if dropdown--modifier}} {{dropdown--modifier}}{{/if}}"
  {{#if dropdown--attribute}}
    {{dropdown--attribute}}
  {{/if}}>
  {{#if dropdown--IsCustom}}
    {{> @partial-block}}
  {{else}}
    {{#> dropdown-toggle}}
      {{> @partial-block}}
    {{/dropdown-toggle}}
    {{#if dropdown--IsActionMenu}}
      {{> dropdown-menu}}
    {{else if dropdown--IsBasicActionMenu}}
      {{> dropdown-menu-basic-action}}
    {{else if dropdown--IsSplitButton}}
      {{> dropdown-menu-split-button}}
    {{else if dropdown--IsGroupsMenu}}
      {{> dropdown-menu-groups}}
    {{else if dropdown--IsDescriptionMenu}}
      {{> dropdown-menu-description}}
    {{else if dropdown--IsMenuToggleImageText}}
      {{> dropdown-menu-toggle-image-text}}
    {{else}}
      {{> dropdown-menu-basic}}
    {{/if}}
  {{/if}}
</div>
